<!DOCTYPE html>
<html lang="en">
<% include ../layouts/HeadLayout %>
<body>
  <% include ../layouts/HeaderLayout %>

  <section class="about-us">
    <div class="container">

      <div class="row">

        <div class="col-sm-3 col-md-3 col-lg-3">
          <% include ./MenuView %>
        </div>

        <div class="col-sm-9 col-md-9 col-lg-9">
          <div class="about-us-content">
            <h1 class="member-title">Profile</h1>

            <div class="paper">

              <div class="form-table">

                <div class="row">
                  <div class="col-md-3">
                    Username
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.memberId %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Nama Lengkap
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.fullName %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Peringkat
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMemberXp.level.num %> - <%= rowMemberXp.level.name %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Tanggal Lahir
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.birthDate_ %></b>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-3">
                    Jenis Kelamin
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.gender %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Email
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.email %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    No. Telepon
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.phoneNumber %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Alamat
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.address %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Provinsi
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.province %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Kota
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.city %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Kecamatan
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.district %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Kode Pos
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.postalCode %></b>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3">
                    Rekening
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.bankAccount %></b>
                  </div>
                </div>


                <!-- <div class="row">
                  <div class="col-md-3">
                    URL Referral
                  </div>
                  <div class="col-md-9">
                    <b><%= rowMember.urlReferral %></b>
                  </div>
                </div> -->
              </div>

              <div class="button-group">
                <div class="row">
                  <div class="col-md-12">
                    <a href="/member/profile/update-profile" class="btn btn-primary" style="margin-bottom: 8px">Ubah Profile</a>
                    <a href="/member/profile/update-bank-account" class="btn btn-success" style="margin-bottom: 8px">Ubah Rekening</a>

                    <a href="/member/profile/change-password" class="btn btn-danger" style="margin-bottom: 8px">Ubah Password</a>

                    <% if (session.mode == 'Member') { %>
                      <a href="/member/profile/change-stockiest-password"
                      class="btn btn-danger"
                      style="margin-bottom: 8px">Ubah Password Stokist</a>
                    <% } %>
                  </div>
                </div>
              </div>

            </div>

          </div>
        </div>
      </div>

    </div>
  </section>

  <% include ../layouts/FooterLayout %>
  <% include ../layouts/FootLayout %>
</body>
</html>
