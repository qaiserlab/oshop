<!DOCTYPE html>
<html lang="en">
<% include ../layouts/HeadLayout %>
<body>
  <% include ../layouts/HeaderLayout %>

  <section class="about-us">
    <div class="container">

      <div class="row">

        <div class="col-sm-3 col-md-3 col-lg-3">
          <% include ./MenuView %>
        </div>

        <div class="col-sm-9 col-md-9 col-lg-9">
          <div class="about-us-content">
            <h1 class="member-title">Transaksi Ewallet</h1>

            <div class="paper">
              <div class="row">
                <div class="col-md-12">
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th style="text-align: center" colspan="3">Total</th>
                      </tr>
                      <tr>
                        <th style="text-align: center">Kredit</th>
                        <th style="text-align: center">Debit</th>
                        <th style="text-align: center">Saldo</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td style="text-align: center"><%= credit_ %></td>
                        <td style="text-align: center"><%= debit_ %></td>
                        <td style="text-align: center"><%= saldo_ %></td>
                      </tr>
                    </tbody>
                  </table>

                  <table class="table">
                    <thead>
                      <th>Tanggal</th>
                      <th>Keterangan</th>
                      <th style="text-align: right">Kredit</th>
                      <th style="text-align: right">Debit</th>
                      <th style="text-align: right">Saldo</th>
                    </thead>
                    <tbody>

                      <% rsEwallet.forEach(row => { %>
                        <tr>
                          <td><%= row.date_ %></td>
                          <td><%= row.description %></td>
                          <td style="text-align: right"><%= row.credit_ %></td>
                          <td style="text-align: right"><%= row.debit_ %></td>
                          <td style="text-align: right"><%= row.saldo_ %></td>
                        </tr>
                      <% }); %>

                    </tbody>
                  </table>

                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </section>

  <% include ../layouts/FooterLayout %>
  <% include ../layouts/FootLayout %>
</body>
</html>
