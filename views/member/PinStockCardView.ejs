<!DOCTYPE html>
<html lang="en">
<% include ../layouts/HeadLayout %>
<body>
  <% include ../layouts/HeaderLayout %>

  <section class="about-us">
    <div class="container">

      <div class="row">

        <div class="col-sm-3 col-md-3 col-lg-3">
          <% include ./MenuView %>
        </div>

        <div class="col-sm-9 col-md-9 col-lg-9">
          <div class="about-us-content">
            <h1 class="member-title">Kartu Stok PIN</h1>

            <div class="paper">
              <div class="row">
                <div class="col-md-12">
                  <%# <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th colspan="2">Total</th>
                      </tr>
                      <tr>
                        <th>BV Pribadi</th>
                        <th>BV Kaki Kiri</th>
                        <th>BV Kaki Tengah</th>
                        <th>BV Kaki Kanan</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                      </tr>
                    </tbody>
                  </table>

                  <hr>%>

                  <table class="table table-bordered">
                    <thead>
                      <th>Tanggal</th>
                      <th>Keterangan</th>
                      <th>Masuk</th>
                      <th>Keluar</th>
                      <th>Sisa</th>
                    </thead>
                    <tbody>

                      <% var balance = 0; rsPinStock.forEach(row => { balance += (row.in - row.out) %>
                        <tr>
                          <td><%= row.date_ %></td>
                          <td><%= row.description %></td>
                          <td><%= row.in %></td>
                          <td><%= row.out %></td>
                          <td><%= balance %></td>
                        </tr>
                      <% }); %>

                    </tbody>
                  </table>

                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </section>

  <% include ../layouts/FooterLayout %>
  <% include ../layouts/FootLayout %>
</body>
</html>
