<!DOCTYPE html>
<html lang="en">
<% include ../layouts/HeadLayout %>
<body>
  <% include ../layouts/HeaderLayout %>

  <nav id="breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/"><i class="fa fa-home"></i></a>
        </li>
        <li class="breadcrumb-item active">
          Belanja
        </li>
      </ol>
    </div>
  </nav>

  <div id="ProductView">
    <div v-cloak>
      <div class="wrap-banner">
        <div class="container">
          <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
              <div class="banner-product">
                <img src="/assets/images/banner-2.jpg" class="img-fluid" />
              </div>
            </div>
          </div>
        </div>
      </div>

      <% rsCategory.forEach(row => { %>
        <section class="product-regular">
          <div class="container">
            <div class="center">
              <div class="row">
                <div class="col-sm-12">
                  <div class="pull-left">
                    <h1>
                      <%= row.title %>
                      <span class="value">(<%= row.rsProduct.length %>)</span>
                    </h1>
                  </div>
                  <div class="pull-left">
                    <a href="<%= row.permalink %>">
                      <i class="icon-arrow-right"></i>
                    </a>
                  </div>
                </div>
                <% row.rsProduct.forEach(rowProduct => { %>
                <div class="col-sm-2 col-md-2 col-lg-2">
                  <div class="product">
                    <div class="product-thumb">
                      <a href="<%= rowProduct.permalink %>">
                        <img src="<%= rowProduct.featuredImage_ %>" alt="">
                      </a>
                    </div>
                    <!--
                    <span class="badge-dark-red">New</span>
                    <ul class="rating">
                      <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                      <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                      <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                      <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                      <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                      <li class="score-rating">(5)</li>
                    </ul>
                    -->
                    <div class="product-name">
                      <a href="<%= rowProduct.permalink %>">
                        <%= rowProduct.productName %>
                      </a>
                    </div>
                    <div class="price"><%= rowProduct.price_ %></div>
                  </div>
                </div>
                <% }); %>

              </div>
            </div>
          </div>
        </section>
      <% }); %>
    </div>
  </div>

  <script>

    /******************
    <id="Vue">
    ******************/
    var ProductView = new Vue({
      el: '#ProductView',

      /******************
      <id="_data">
      ******************/
      data: {
        rsCategory: <%- JSON.stringify(rsCategory) %>,
      },

      /******************
      <id="_computed">
      ******************/
      computed: {
      },

      /******************
      <id="_mounted">
      ******************/
      mounted: function () {
        this.rsCategory.forEach(function (row) {
          console.log(row.title);
        }.bind(this));
      },

      /******************
      <id="_methods">
      ******************/
      methods: {

        /******************
        <id="_setColorActive">
        ******************/
        setColorActive: function (color) {
        },

      },
    });

  </script>

  <% include ../layouts/FooterLayout %>
  <% include ../layouts/FootLayout %>
</body>
</html>
